pipeline {
  agent none
  stages {
    stage('Back-end') {
      agent {
        docker { image 'maven:3.8.1-adoptopenjdk-11' }
      }
      steps {
        // Assuming a basic Maven project with a pom.xml in the workspace
        sh 'mvn clean compile'
      }
    }
    stage('Front-end') {
      agent {
        docker { image 'node:16-alpine' }
      }
      steps {
        // Assuming a basic Node.js project with package.json
        sh 'npm install'
        sh 'npm run build'  // or any simple build command
      }
    }
  }
}
